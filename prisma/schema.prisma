generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reseller {
  id       Int    @id @default(autoincrement())
  fullName String
  cpf      String @unique
  email    String @unique
  balance  Float
  password String

  @@map("resellers")
}

model StoreOwner {
  id       Int    @id @default(autoincrement())
  fullName String
  cpf      String @unique
  email    String @unique
  balance  Float
  password String

  @@map("store_owners")
}

model Transaction {
  id       Int    @id @default(autoincrement())
  sender   String
  receiver String
  amount   Float

  @@map("transactions")
}
